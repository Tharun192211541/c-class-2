#include<stdio.h>
int main()
{
	printf("192211541");
	int i,n,a[40];
	float sum=0;
	float average;
	printf("\nenter the size of array");
	scanf("%d",&n);
	printf("enter the array elements");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
		
	}
	for(i=0;i<n;i++)
	{
	sum=sum+a[i];
}
	printf("sum=%f",sum);
	average=sum/n;
	printf("\naverage=%f",average);
	return 0;
	
	
	
}
